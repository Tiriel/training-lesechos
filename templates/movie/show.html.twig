{% extends 'base.html.twig' %}

{% block title %}Movie :{{ movie.title ?? 'Not found' }}{% endblock %}

{% block body %}
<div class="example-wrapper">
    {% if movie.title %}
    <h1>Movie : {{ movie.title }}</h1>

    <ul>
        <li>Id : {{ movie.id }}</li>
        <li>Released at : {{ movie.releasedAt|date('d F Y') }}</li>
        <li>Genre :
            <ul>
            {{ movie.genre|map(genre => genre.name)|join(', ') }}
            </ul>
        </li>
    </ul>
        <section class="row">
            <div class="col-md-6">
                <form method="get" action="{{ path('app_movie_payment', {'paymentType': 'stripe'}) }}">
                    <button class="btn">Stripe</button>
                </form>
            </div>
            <div class="col-md-6">
                <form method="get" action="{{ path('app_movie_payment', {'paymentType': 'paypal'}) }}">
                    <button class="btn">Paypal</button>
                </form>
            </div>
        </section>
    {% else %}
        <h1>Movie not found.</h1>
    {% endif %}
</div>
{% endblock %}
